<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <shape>
            <corners 
		        android:radius="80dp"/>
		    <gradient 
		        android:startColor="#FFFF0000"
		        android:endColor="#80FF00FF"
		        android:angle="45"/>
			<solid 
			    android:color="@color/colorWhiteBlue"/>
        </shape>
    </item>
    <item android:state_selected="true">
        <shape>
            <corners 
		        android:radius="80dp"/>
		    <gradient 
		        android:startColor="#FFFF0000"
		        android:endColor="#80FF00FF"
		        android:angle="45"/>
			<solid 
			    android:color="@color/colorWhiteBlue"/>
        </shape>
    </item>
    <item>
        <shape>
            <corners 
		        android:radius="80dp"/>
		    <gradient 
		        android:startColor="#FFFF0000"
		        android:endColor="#80FF00FF"
		        android:angle="45"/>
			<solid 
			    android:color="@color/white"/>
        </shape>
    </item>

</selector>
