<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:gravity="center"
		android:background="@color/colorBackGroud"
		android:paddingBottom="@dimen/activity_vertical_margin"
		android:paddingLeft="@dimen/activity_horizontal_margin"
		android:paddingRight="@dimen/activity_horizontal_margin"
		android:paddingTop="@dimen/activity_vertical_margin"
		tools:context="com.tobey.easyLife.FamilyActivity">

		<TextView android:id="@+id/activity_join_family_tv_message"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentTop="true"
			android:layout_centerHorizontal="true"
			android:layout_marginBottom="30dp"
			android:textColor="@color/colorGray"
			android:textSize="20dp"
			android:text="请输入家庭ID" />
		
		<EditText
		    android:id="@+id/activity_join_family_et_id"
		    android:layout_below="@+id/activity_join_family_tv_message"
		    android:hint="ID"
		    android:inputType="text"
		    android:textColor="@color/colorGray"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
	        android:textSize="18dp"
	        android:singleLine="true"
	        android:background="@null"
		    android:ems="10" 
		    android:layout_marginBottom="30dp"
		    android:gravity="center"/>

		<Button
		    android:id="@+id/activity_join_family_bt_joinfamily"
		    android:layout_below="@+id/activity_join_family_et_id"
		    android:layout_width="120dp"
		    android:layout_height="40dp"
		    android:textColor="@color/colorGrayDark"
		    android:layout_centerHorizontal="true"
		    android:background="@drawable/selector_bt_dialog_bg"
		    android:gravity="center"
		    android:text="加入家庭" />

		

</RelativeLayout>
