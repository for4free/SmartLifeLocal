<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/item_forecase_rl_skyCon"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_below="@+id/item_forecase_tv_showTime"
    	android:gravity="center"
    	android:orientation="horizontal"
        >
        <ImageView 
          	android:id="@+id/item_forecase_iv_skyImg"
	      	android:layout_width="wrap_content"
	      	android:layout_height="wrap_content"
	     	 android:gravity="center"
	      	android:layout_marginLeft="10dp"/>
	        
        <TextView
	        android:id="@+id/item_forecase_tv_showSky"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:layout_toRightOf="@+id/item_forecase_iv_skyImg"
	        android:layout_gravity="center"
	        android:layout_marginTop="5dp"
	        android:text="晴"
	        android:textSize="16sp" />
	        
        <TextView
	        android:id="@+id/item_forecase_tv_showTempForecast"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@+id/item_forecase_tv_showSky"
	        android:layout_marginLeft="10dp"
	        android:layout_gravity="center"
	        android:layout_marginTop="5dp"
	        android:text="18°"
	        android:textSize="16sp" />
	        
        <TextView
	            android:id="@+id/item_forecase_tv_showPm25"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="10dp"
	            android:layout_toRightOf="@+id/item_forecase_iv_skyImg"
	            android:layout_below="@+id/item_forecase_tv_showSky"
	            android:layout_gravity="center"
	            android:layout_marginTop="5dp"
	            android:text="54μg/m3"
	            android:textSize="12sp" />
        
        <TextView
	        android:id="@+id/item_forecase_tv_time"
	        android:layout_width="wrap_content"
	        android:layout_marginTop="5dp"
	        android:layout_marginLeft="10dp"
	        android:layout_marginBottom="5dp"
	        android:layout_toRightOf="@+id/item_forecase_iv_skyImg"
	        android:layout_below="@+id/item_forecase_tv_showPm25"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:textSize="12sp"
	        android:text="时间" />
    </RelativeLayout>
    
</LinearLayout>
