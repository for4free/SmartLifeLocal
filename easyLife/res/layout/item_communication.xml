<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="20dp"
    android:background="@drawable/selector_item"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="60dp" >
    
    <RelativeLayout 
        android:id="@+id/item_communication_rl_phone"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        >
	    <ImageView 
	        android:id="@+id/item_communication_iv_phone"
	        android:layout_width="wrap_content"
	        android:layout_height="60dp"
	        android:layout_alignParentLeft="true"
	        android:layout_marginLeft="15dp"
	        android:src="@drawable/people"/>
	    
	    <TextView 
	        android:id="@+id/item_communication_tv_name"
	        android:layout_toRightOf="@+id/item_communication_iv_phone"
	        android:layout_width="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:gravity="center"
	        android:layout_height="60dp"
	        android:text="姓名："
	        />
	    
	    <TextView 
	        android:id="@+id/item_communication_tv_phone"
	        android:layout_toRightOf="@+id/item_communication_tv_name"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="20dp"
	        android:layout_width="wrap_content"
	        android:gravity="center"
	        android:layout_height="60dp"
	        android:text="15253246036"
	        />
	</RelativeLayout>
	
    <RelativeLayout 
        android:id="@+id/item_communication_rl_msg"
        android:layout_marginTop="10dp"
        android:layout_width="40dp"
        android:gravity="center"
        android:background="@drawable/selector_sendmsg"
        android:clickable="true"
        android:layout_height="40dp"
        android:layout_marginLeft="100dp"
        android:layout_toRightOf="@+id/item_communication_rl_phone"
        >
	    <ImageView 
	        android:id="@+id/item_communication_iv_msg"
	        android:layout_width="30dp"
	        android:gravity="center"
	        android:layout_height="30dp"
	        android:src="@drawable/ic_sendmsg"/>
	</RelativeLayout>

</LinearLayout>
